---
import NavBarIcon from "./NavBarIcon.astro";
---
<header>
    <a class="left" href="/">SCIENCE Lab</a>
    <nav class="right">
        <NavBarIcon class="right__icon"/>
        <div class="right__dropdown">
            <a href="/page1">Page1</a>
            <a href="/page2">Page2</a>
            <a href="/join" class="register">Join now</a>
        </div>
    </nav>
</header>

<style>
    /* For desktop: */
    header {
        position: fixed;
        top: 0;
        left: 0; right: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem var(--padding-lr);
        background-image: linear-gradient(var(--color-background), transparent);
        text-shadow: 0 0 5px var(--color-background);
        z-index: 99999;
        margin-bottom: 3rem;
        text-transform: uppercase;
        font-size: var(--fontsize-normal);
    }
    .register {
        padding: 0.2rem 1rem;
        background-color: var(--color-secondary);
        color: var(--color-background);
        border-radius: 1em;
        text-shadow: none;
    }
    .right__icon {
        display: none;
    }
    .right__dropdown {
        --item-gap: clamp(1rem, 5vw, 3rem);
        display: flex;
        gap: var(--item-gap);
    }

    @media only screen and (max-width: 1023px) {
        /* For tablets: */
        .right__icon {
            display: block;
            height: 2em;
            transition: color 0.3s ease;
        }
        .right__dropdown {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            padding: calc(1.5em + 3rem) var(--padding-lr) 0rem var(--padding-lr);
            background-image: linear-gradient(var(--color-background), transparent);
            flex-direction: column;
            gap: 0;
            text-align: end;
            white-space: nowrap;
            transition: all 0.3s ease;
            z-index: -1;
        }
        .right__dropdown > * {
            padding: 0;
            font-size: 0;
            opacity: 0;
            width: 100%;
            transition: font-size 0.3s ease;
        }
        .right:hover .right__dropdown {
            padding-bottom: 1rem;
            background-image: url(https://media.tenor.com/-uMIofTxVWIAAAAd/cat-vibing-vibing-cat.gif);
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
        }
        .right:hover .right__dropdown > * {
            font-size: 1rem;
            opacity: 1;
            padding: 0.5rem 0;
        }
        .register {
            background-color: unset;
            color: var(--color-text);
            border-top: 2px solid currentColor;
            border-radius: 0;
        }
    }
</style>