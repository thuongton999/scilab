---
import Icon from "../../Icon";
import UserProfile from "../UserProfile.astro";
---

<header>
    <a class="brand" href="/">
        <Icon src='/favicon.svg' client:load/>
        ScienceLab
    </a>
    <UserProfile />
</header>

<style>
    /* Mobile first */
    header {
        font-size: var(--fontsize-large);
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }
    .brand {
        flex: 1 0;
        display: flex;
        gap: 0.5rem;
        font-family: var(--font-strong);
    }
</style>
