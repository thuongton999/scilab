        content: " â†—";
    }
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        line-height: 100%;
    }
    h1 {
        font-size: var(--fontsize-larger);
        font-weight: bold;
    }
    h2 {
        font-size: var(--fontsize-large);
    }
    p {
        font-weight: 300;
        font-size: var(--fontsize-normal);
        max-width: fit-content;
        max-width: -moz-fit-content;
    }
    i {
        font-style: italic;
        font-weight: 100;
    }
    b {
        font-weight: bold;
    }
</style>
